<h1>
  Edit death #<%= @death.id %>
</h1>

<hr>

<form action="/update_death/<%= @death.id %>" method="post">

  <div class="form-group">
    <label for="cattle_id">
      Cattle
    </label>

    <%= select_tag(:cattle_id, options_from_collection_for_select(Cattle.all, :id, :brinco, @death.cattle_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="brinco">
      Brinco
    </label>

    <input type="text" id="brinco" name="brinco" class="form-control" value="<%= @death.brinco %>">
  </div>

  <div class="form-group">
    <label for="causa">
      Causa
    </label>

    <input type="text" id="causa" name="causa" class="form-control" value="<%= @death.causa %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update death
  </button>
</form>

<hr>

<a href="/deaths">
  Go back
</a>
