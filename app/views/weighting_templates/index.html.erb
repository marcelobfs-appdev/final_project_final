<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All weightings
    </h1>

    <a href="/weightings/new" class="btn btn-block btn-outline-secondary">
      Add a new weighting
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Cattle
        </th>

        <th>
          Brinco
        </th>

        <th>
          Lote
        </th>

        <th>
          Peso
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @weightings.each do |weighting| %>
      <tr>
        <!-- Display weighting.id start -->
        <td>
          <%= weighting.id %>
        </td>
        <!-- Display weighting.id end -->

        <!-- Display weighting.cattle_id start -->
        <td>
          <%= weighting.cattle.brinco %>
        </td>
        <!-- Display weighting.cattle_id end -->

        <!-- Display weighting.brinco start -->
        <td>
          <%= weighting.brinco %>
        </td>
        <!-- Display weighting.brinco end -->

        <!-- Display weighting.lote start -->
        <td>
          <%= weighting.lote %>
        </td>
        <!-- Display weighting.lote end -->

        <!-- Display weighting.peso start -->
        <td>
          <%= weighting.peso %>
        </td>
        <!-- Display weighting.peso end -->

        <!-- Display weighting.created_at start -->
        <td>
          <%= time_ago_in_words(weighting.created_at) %> ago
        </td>
        <!-- Display weighting.created_at end -->

        <!-- Display weighting.updated_at start -->
        <td>
          <%= time_ago_in_words(weighting.updated_at) %> ago
        </td>
        <!-- Display weighting.updated_at end -->

        <td>
          <a href="/weightings/<%= weighting.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
