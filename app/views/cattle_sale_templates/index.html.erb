<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All cattle sales
    </h1>

    <a href="/cattle_sales/new" class="btn btn-block btn-outline-secondary">
      Add a new cattle sale
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "cattle_sale_templates/cattle_sales_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Cattle
        </th>

        <th>
          Brinco
        </th>

        <th>
          Peso
        </th>

        <th>
          Preco por kilo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @cattle_sales.each do |cattle_sale| %>
      <tr>
        <td>
          <%= cattle_sale.id %>
        </td>

        <td>
          <% if cattle_sale.cattle.present? %>
            <a href="/cattles/<%= cattle_sale.cattle.id %>">
              <%= cattle_sale.cattle.brinco %>
            </a>
          <% end %>
        </td>

        <td>
          <%= cattle_sale.brinco %>
        </td>

        <td>
          <%= cattle_sale.peso %>
        </td>

        <td>
          <%= cattle_sale.preco_por_kilo %>
        </td>

        <td>
          <%= time_ago_in_words(cattle_sale.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(cattle_sale.updated_at) %> ago
        </td>

        <td>
          <a href="/cattle_sales/<%= cattle_sale.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @cattle_sales, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
