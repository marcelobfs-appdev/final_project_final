<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Brinco
        </th>

        <th>
          Data compra ou desmame
        </th>

        <th>
          Data nascimento
        </th>

        <th>
          Origem
        </th>

        <th>
          Raca
        </th>

        <th>
          Sexo
        </th>

        <th>
          Pai
        </th>

        <th>
          Brinco mae
        </th>

        <th>
          Peso entrada
        </th>

        <th>
          Preco por kilo
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @cattles.each do |cattle| %>
      <tr>
        <!-- Display cattle.id start -->
        <td>
          <%= cattle.id %>
        </td>
        <!-- Display cattle.id end -->

        <!-- Display cattle.brinco start -->
        <td>
          <%= cattle.brinco %>
        </td>
        <!-- Display cattle.brinco end -->

        <!-- Display cattle.data_compra_ou_desmame start -->
        <td>
          <%= cattle.data_compra_ou_desmame %>
        </td>
        <!-- Display cattle.data_compra_ou_desmame end -->

        <!-- Display cattle.data_nascimento start -->
        <td>
          <%= cattle.data_nascimento %>
        </td>
        <!-- Display cattle.data_nascimento end -->

        <!-- Display cattle.origem start -->
        <td>
          <%= cattle.origem %>
        </td>
        <!-- Display cattle.origem end -->

        <!-- Display cattle.raca start -->
        <td>
          <%= cattle.raca %>
        </td>
        <!-- Display cattle.raca end -->

        <!-- Display cattle.sexo start -->
        <td>
          <%= cattle.sexo %>
        </td>
        <!-- Display cattle.sexo end -->

        <!-- Display cattle.pai start -->
        <td>
          <%= cattle.pai %>
        </td>
        <!-- Display cattle.pai end -->

        <!-- Display cattle.brinco_mae start -->
        <td>
          <%= cattle.brinco_mae %>
        </td>
        <!-- Display cattle.brinco_mae end -->

        <!-- Display cattle.peso_entrada start -->
        <td>
          <%= cattle.peso_entrada %>
        </td>
        <!-- Display cattle.peso_entrada end -->

        <!-- Display cattle.preco_por_kilo start -->
        <td>
          <%= cattle.preco_por_kilo %>
        </td>
        <!-- Display cattle.preco_por_kilo end -->

        <!-- Display cattle.status start -->
        <td>
          <%= cattle.status %>
        </td>
        <!-- Display cattle.status end -->

        <!-- Display cattle.created_at start -->
        <td>
          <%= time_ago_in_words(cattle.created_at) %> ago
        </td>
        <!-- Display cattle.created_at end -->

        <!-- Display cattle.updated_at start -->
        <td>
          <%= time_ago_in_words(cattle.updated_at) %> ago
        </td>
        <!-- Display cattle.updated_at end -->

        <td>
          <a href="/cattles/<%= cattle.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
