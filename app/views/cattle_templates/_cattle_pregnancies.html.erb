<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Pregnancies

    <a data-toggle="collapse" href="#cattle_pregnancies_new_form">
      Add pregnancy
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @cattle.pregnancies.each do |pregnancy| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/pregnancies/<%= pregnancy.id %>">
          <%= pregnancy.cattle_id %>
        </a>

        <a href="/delete_pregnancy_from_cattle/<%= pregnancy.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="cattle_pregnancies_new_form">
        <%= render partial: "cattle_templates/cattle_pregnancies_new_form" %>
      </div>
    </div>

  </ul>
</div>
