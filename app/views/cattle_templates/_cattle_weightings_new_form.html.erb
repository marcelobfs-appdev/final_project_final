<form action="/create_weighting_from_cattle" method="post">

  <input type="hidden" name="cattle_id" value="<%= @cattle.id %>">

  <div class="form-group">
    <label for="brinco">
      Brinco
    </label>

    <input type="text" id="brinco" name="brinco" class="form-control" value="<%= @weighting.brinco %>">
  </div>

  <div class="form-group">
    <label for="lote">
      Lote
    </label>

    <input type="text" id="lote" name="lote" class="form-control" value="<%= @weighting.lote %>">
  </div>

  <div class="form-group">
    <label for="peso">
      Peso
    </label>

    <input type="text" id="peso" name="peso" class="form-control" value="<%= @weighting.peso %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create weighting
  </button>
</form>
