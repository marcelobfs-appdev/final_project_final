<!-- Validation failure messages -->
<% if @vaccination.errors.any? %>
  <% @vaccination.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit vaccination #<%= @vaccination.id %>
</h1>

<hr>

<!-- Form vaccination start -->
<form action="/update_vaccination/<%= @vaccination.id %>" method="post">
<!-- Form vaccination end -->

  <!-- Label and input for cattle_id start -->
  <div class="form-group">
    <label for="cattle_id">
      Cattle
    </label>

    <!-- Input for cattle_id start -->
    <%= select_tag(:cattle_id, options_from_collection_for_select(Cattle.all, :id, :brinco, @vaccination.cattle_id), :class => "form-control") %>
    <!-- Input for cattle_id end -->
  </div>
  <!-- Label and input for cattle_id end -->

  <!-- Label and input for brinco start -->
  <div class="form-group">
    <label for="brinco">
      Brinco
    </label>

    <!-- Input for brinco start -->
    <input type="text" id="brinco" name="brinco" class="form-control" value="<%= @vaccination.brinco %>">
    <!-- Input for brinco end -->
  </div>
  <!-- Label and input for brinco end -->

  <!-- Label and input for tipo_vacina start -->
  <div class="form-group">
    <label for="tipo_vacina">
      Tipo vacina
    </label>

    <!-- Input for tipo_vacina start -->
    <input type="text" id="tipo_vacina" name="tipo_vacina" class="form-control" value="<%= @vaccination.tipo_vacina %>">
    <!-- Input for tipo_vacina end -->
  </div>
  <!-- Label and input for tipo_vacina end -->

  <button class="btn btn-block btn-outline-secondary">
    Update vaccination
  </button>
</form>

<hr>

<a href="/vaccinations">
  Go back
</a>
